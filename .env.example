# Environment Configuration

# ===================
# API Keys
# ===================

# Reddit API (https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=AlgorithmicAccountability/1.0

# YouTube Data API (https://console.cloud.google.com/)
YOUTUBE_API_KEY=your_youtube_api_key

# OpenAI API (https://platform.openai.com/)
OPENAI_API_KEY=your_openai_api_key

# Anthropic API (https://console.anthropic.com/) - Optional
ANTHROPIC_API_KEY=your_anthropic_api_key

# LLM Provider: "openai" or "anthropic"
LLM_PROVIDER=openai

# ===================
# Database
# ===================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=algorithmic_accountability
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=algorithmic_accountability

# Redis
REDIS_URL=redis://localhost:6379/0

# ===================
# Application
# ===================

# FastAPI
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# Frontend
FRONTEND_URL=http://localhost:3000

# ===================
# Rate Limiting
# ===================

# Reddit: requests per minute
REDDIT_RATE_LIMIT=60

# YouTube: daily quota units
YOUTUBE_DAILY_QUOTA=10000

# ===================
# Model Configuration
# ===================

# Sentence Transformer model for embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2

# SpaCy model
SPACY_MODEL=en_core_web_sm

# Stance detection model (will be fine-tuned)
STANCE_MODEL=bert-base-uncased

# ===================
# Data Paths
# ===================

DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
MODELS_PATH=./data/models
